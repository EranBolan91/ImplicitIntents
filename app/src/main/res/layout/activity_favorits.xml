<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.world.bolandian.implicitintents.Favorites">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Favorits links"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnFacebook"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:onClick="linkClicked"
        app:srcCompat="@mipmap/facebook"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="41dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/btnInsta"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="0dp"
        android:onClick="linkClicked"
        app:layout_constraintBottom_toBottomOf="@+id/btnFacebook"
        app:layout_constraintLeft_toRightOf="@+id/btnFacebook"
        app:layout_constraintTop_toTopOf="@+id/btnFacebook"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/instagramlogo" />

    <ImageButton
        android:id="@+id/btnLinkdin"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:onClick="linkClicked"
        app:layout_constraintBottom_toBottomOf="@+id/btnInsta"
        app:layout_constraintLeft_toRightOf="@+id/btnInsta"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnInsta"
        app:srcCompat="@mipmap/linkdinlogo" />

    <ImageButton
        android:id="@+id/btnStack"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="57dp"
        android:onClick="linkClicked"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFacebook"
        app:srcCompat="@mipmap/stackoverflowlogo" />

    <ImageButton
        android:id="@+id/btnYoutube"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="57dp"
        android:onClick="linkClicked"
        app:layout_constraintBottom_toBottomOf="@+id/btnStack"
        app:layout_constraintLeft_toRightOf="@+id/btnStack"
        app:layout_constraintTop_toBottomOf="@+id/btnInsta"
        app:srcCompat="@mipmap/youtubelogo" />

    <ImageButton
        android:id="@+id/btnAndroid"
        android:layout_width="98dp"
        android:layout_height="87dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="linkClicked"
        app:layout_constraintBottom_toBottomOf="@+id/btnYoutube"
        app:layout_constraintLeft_toRightOf="@+id/btnYoutube"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLinkdin"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/androidlogo" />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Google search"
        android:inputType="textPersonName"
        android:textAlignment="viewEnd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStack" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etSearch"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="Calendar"
        app:layout_constraintBottom_toBottomOf="@+id/btnSearch"
        app:layout_constraintLeft_toRightOf="@+id/btnSearch"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnSearch" />

</android.support.constraint.ConstraintLayout>
